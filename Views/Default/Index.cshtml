    @Html.Action("partialgallery", "default")
    <!-- END section -->

    <section class="site-section bg-light" id="section-contact">
        <div class="container">
            <div class="row">

                <div class="col-md-12 text-center mb-5 site-animate">
                    <h2 class="display-4">İletişim</h2>
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            <p class="lead">her türlü soru, görüş, öneri ve proje teklifleri için benimle iletişime geçin</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-7 mb-5 site-animate">
                    <form action="" method="post">
                        <div class="form-group">
                            <label for="name" class="sr-only">İsminiz</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="İsim">
                        </div>
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="message" class="sr-only">Mesajınız</label>
                            <textarea name="detail" id="detail" cols="30" rows="10" class="form-control" placeholder="mesajınızı yazın"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-lg" value="Gönder">
                        </div>
                    </form>
                </div>
                <div class="col-md-1"></div>
                @Html.Action("partialcontactaddress", "contact")

            </div>
        </div>
    </section>
    @Html.Action("partialcontactlocation", "contact")
    <!-- END section -->

    @Html.Action("partialfooter", "default")



