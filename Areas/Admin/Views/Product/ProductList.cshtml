@model List<project2BurgerMenu.entites.Product>
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün listesi</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ürün Id</th>
                            <th>Ürün Görseli</th>
                            <th>Ürün Ad</th>
                            <th>Ürün Kategorisi</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.productId</td>
                                <td><img src="@item.ımageUrl" height="50" width="200" /></td>
                                <td>@item.Productname</td>
                                <td>@item.category.categoryName</td>
                                <td><a href="/Admin/product/DelateProduct/@item.productId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/product/UpdateProduct/@item.productId" class="btn btn-success">Güncelle</a></td>
                            </tr>

                        }


                    </tbody>
                </table>
                <a href="/Admin/product/CreateProduct/" class="btn btn-primary">Ekle</a>
            </div>
        </div>
    </div>
</div>

