@model List<project2BurgerMenu.entityes.message>
@{
    ViewBag.Title = "SendBox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">giden Mesajlar Sayfası</h4>
            <p class="card-description">

            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>alıcı</th>
                            <th>konu</th>
                            <th>Tarih</th>
                            <th>Masajı Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.ReceiverEmaiL</td>
                                <td>@item.Title</td>
                                <td>@item.SendDate.ToShortDateString()</td>
                                <td><a href="#" class="btn btn-primary">Mesajı aç</a></td>

                            </tr>

                        }


                    </tbody>
                </table>
                <a href="#" class="btn btn-info"> Yeni Mesaj Ekle</a>
            </div>
        </div>
    </div>
</div>

